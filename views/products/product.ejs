<!-- product section -->
<%-include('../components/head.ejs') %> <%-include('../components/navbar.ejs')%>

<title>product</title>

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Our <span>products</span></h2>
        </div>
        <% if(messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
        <% } %>
        <div class="row">
            <% Object.values(books ).forEach((item)=> { %>
            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="box">
                    <div class="option_container">
                        <form action="/add_to_cart" method="POST">
                            <div class="options">
                                <input
                                    type="hidden"
                                    name="cart_id"
                                    value="<%= item._id  %>"
                                />
                                <input
                                    type="hidden"
                                    name="name"
                                    value="<%= item.name  %>"
                                />
                                <input
                                    type="hidden"
                                    name="author"
                                    value="<%= item.author  %>"
                                />
                                <input
                                    type="hidden"
                                    name="price"
                                    value="<%= item.price  %>"
                                />
                                <input
                                    type="hidden"
                                    name="image"
                                    value="<%= item.image  %>"
                                />

                                <input
                                    type="number"
                                    name="amount"
                                    value="1"
                                    min="1"
                                />
                                <button type="submit" class="option1">
                                    Add to Cart
                                </button>
                                <a href="" class="option2"> Buy Now </a>
                            </div>
                        </form>
                    </div>
                    <div class="img-box">
                        <img src="images/books/<%= item.image %> " alt="" />
                    </div>
                    <div class="detail-box">
                        <h5><%= item.name %></h5>
                        <h6>à¸¿<%= item.price %></h6>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</section>
<!-- end product section -->

<%-include('../components/footer.ejs')%>
