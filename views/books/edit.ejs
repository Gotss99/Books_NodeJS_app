<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../components/head.ejs') %>
        <title>Books</title>
    </head>
    <body class="container" style="margin-top: 50px">
        <div class="card">
            <div class="card-header">Add book</div>
            <div class="card-body">
                <form
                    action="/books/update"
                    method="POST"
                    enctype="multipart/form-data"
                >
                    <input
                        type="hidden"
                        name="book_id"
                        value="<%= books._id %>"
                    />
                    <div class="form-group">
                        <label>Name:</label>
                        <input
                            type="text"
                            class="form-control"
                            name="name"
                            value="<%= books.name %>"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label>Author:</label>
                        <input
                            type="text"
                            class="form-control"
                            name="author"
                            value="<%= books.author %>"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label>Price:</label>
                        <input
                            type="number"
                            class="form-control"
                            name="price"
                            value="<%= books.price %>"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label>Image:</label>
                        <input type="file" class="form-control" name="image" />

                        <img
                            src="/images/books/<%= books.image %>"
                            alt=""
                            width="220px"
                        />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Add</button>
                        <a href="/books" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
